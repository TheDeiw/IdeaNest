rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile photos - users can only read/write/delete their own photo
    match /profile_photos/{userId} {
      // Allow anyone to read profile photos
      allow read: if true;

      // Only the owner can upload their profile photo
      // Also validate it's an image and under 5MB
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024;

      // Only the owner can delete their profile photo
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}

